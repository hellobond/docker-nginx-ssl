server {
    listen         80;
    server_name    dev-marvin.hellobond.io;
    return         301 https://dev-marvin.hellobond.io$request_uri$is_args$args;
}


server {
    listen 443 ssl;
    add_header 'Access-Control-Allow-Origin' "'http://marvin-local:5000'|'https://writing-labs.hellobond.io'";
    server_name dev-marvin.hellobond.io;

    ssl_certificate /etc/nginx/ssl/server.crt;
    ssl_certificate_key /etc/nginx/ssl/server.key;

    location / {
      proxy_pass http://dev-text-renderer-container:8000/;
      proxy_redirect     off;

      proxy_set_header   Host             $host;
      proxy_set_header   X-Real-IP        $remote_addr;
      proxy_set_header   X-Forwarded-For  $proxy_add_x_forwarded_for;
    }
}
